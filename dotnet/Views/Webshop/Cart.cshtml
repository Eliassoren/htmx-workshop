
<div class="d-flex justify-content-between p-4">
    <h2>Shopping cart <i class="bi bi-cart4"></i></h2>
    <button class="btn btn-sm" style="background-color: #EE3A64; color: white;"
            hx-delete="webshop/cart">
        Clear <i class="bi bi-trash"></i>
    </button>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Product</th>
            <th class="text-end">Qty</th>
            <th class="text-end">Sum</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in ViewBag.cartList)
            {


            <tr>
                <td>@item.Product.Name</td>
                <td class="text-end">@item.Quantity</td>
                <td class="text-end">@item.GetSum()</td>
                <td><button hx-post="/webshop/remove-from-cart" name="productId" value="@item.Product.ID" class="btn btn-sm btn-outline-danger">Remove</button> </td>
            </tr>
            }
            <tr>
                <th colspan="2">Total</th>
                <th class="text-end">@ViewBag.totalSum</th>
            </tr>
        </tbody>
    </table>


