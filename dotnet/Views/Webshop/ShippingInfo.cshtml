@functions {
    public string FormatCurrency(decimal value, string cultureCode = "no-NO")
    {
        var culture = new System.Globalization.CultureInfo(cultureCode);
        return value.ToString("C", culture);
    }
}


@if (ViewBag.FreeShipping)
{
    <div class="alert alert-success">
        You get free shipping on this order!
    </div>
}
else
{

    <div class="alert alert-danger">
        Shop for @FormatCurrency(ViewBag.Remaining) more to get free shipping on this order
    </div>

}